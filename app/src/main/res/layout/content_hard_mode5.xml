<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/tealBG"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mycompany.testapp.HardMode5Activity"
    tools:showIn="@layout/activity_hard_mode5">
    <!-- LEVEL TIMER -->
    <Chronometer
        android:id="@+id/chronometer10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtquestion_number10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtquestion_number10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question" />

    <TextView
        android:id="@+id/txtScore10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Score: "
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnHard17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLACK"
        android:textColor="@color/gray"
        android:textSize="24sp"
        android:background="@color/brown"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/txtquestion_number10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnHard18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RED"
        android:textColor="@color/orange"
        android:textSize="24sp"
        android:background="@color/pink"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/btnHard17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnHard19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORANGE"
        android:textColor="@color/pink"
        android:textSize="24sp"
        android:background="@color/yellow"
        android:layout_alignTop="@+id/btnHard17"
        android:layout_alignRight="@+id/txtScore10"
        android:layout_alignEnd="@+id/txtScore10" />

    <Button
        android:id="@+id/btnHard20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PURPLE"
        android:textColor="@color/purple"
        android:textSize="24sp"
        android:background="@color/blue"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/btnHard19"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hard_quest5text"
        android:textColor="@color/tealHint"
        android:textAlignment="center"
        android:layout_marginTop="48dp"
        android:id="@+id/textView"
        android:layout_below="@+id/btnHard18"
        android:layout_alignRight="@+id/btnHard20"
        android:layout_alignEnd="@+id/btnHard20" />

</RelativeLayout>
