<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/tealBG"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mycompany.testapp.HardMode2Activity"
    tools:showIn="@layout/activity_hard_mode2">
    <!-- LEVEL TIMER -->
    <Chronometer
        android:id="@+id/chronometer7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtquestion_number7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtquestion_number7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question" />

    <TextView
        android:id="@+id/txtScore7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Score: "
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnHard5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YELLOW"
        android:textColor="@color/orange"
        android:textSize="24sp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/txtquestion_number7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnHard6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CYAN"
        android:textColor="@color/cyan"
        android:textSize="24sp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/btnHard5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnHard7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAGENTA"
        android:textColor="@color/teal"
        android:textSize="24sp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignTop="@+id/btnHard5"
        android:layout_alignRight="@+id/txtScore7"
        android:layout_alignEnd="@+id/txtScore7" />

    <Button
        android:id="@+id/btnHard8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHITE"
        android:textColor="@color/red"
        android:textSize="24sp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/btnHard7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hard_quest2text"
        android:textColor="@color/tealHint"
        android:textAlignment="center"
        android:layout_marginTop="48dp"
        android:id="@+id/textView"
        android:layout_below="@+id/btnHard6"
        android:layout_alignRight="@+id/btnHard8"
        android:layout_alignEnd="@+id/btnHard8" />

</RelativeLayout>
